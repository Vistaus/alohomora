<schemalist>
  <schema path="/com/github/z0o0p/alohomora/" id="com.github.z0o0p.alohomora">
    <key name="new-user" type="b">
      <default>true</default>
      <summary>New User</summary>
      <description>Whether the user is new to this application.</description>
    </key>
    <key name="window-pos" type="(ii)">
      <default>(-1, -1)</default>
      <summary>Window Position</summary>
      <description>The window position on the screen.</description>
    </key>
    <key name="dark-mode" type="b">
      <default>false</default>
      <summary>Dark Mode</summary>
      <description>Whether to implement dark mode or not.</description>
    </key>
    <key name="sort-ascending" type="b">
      <default>true</default>
      <summary>Ascending Order Sorting</summary>
      <description>Whether to display secrets in ascending order or not.</description>
    </key>
    <key name="copy-new-pass" type="b">
      <default>false</default>
      <summary>Copy New Password</summary>
      <description>Whether to copy the new password after adding it or not.</description>
    </key>
    <key name="gen-pass-length" type="i">
      <default>16</default>
      <summary>Generated Password Length</summary>
      <description>Length of the auto-generated password.</description>
    </key>
  </schema>
</schemalist>
